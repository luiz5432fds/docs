{
  "name": "piano-integral-app",
  "version": "1.0.0",
  "main": "desktop_build/main.js",
  "scripts": {
    "start": "electron .",
    "build": "cd frontend && npm install && npm run build",
    "pack": "electron-builder --win --x64"
  },
  "build": {
